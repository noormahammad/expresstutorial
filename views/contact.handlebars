<div class="page-header">
    <h3>Contact Us</h3>
</div>
<div class="contactUs">
    <h4>Send Us your Questions</h4>
    <form action="/process?form=contactus" method="post" class="formContactUs" role="form">
        <input type="hidden" name="_csrf"   value="{{csrf}}">
        
        <div class="form-group">
            <label for="fieldEmail" class="col-sm-2 control-label">Email</label>
            <div class="col-sm-4">
                <input type="text" name="email" id="fieldEmail" class="form-control">
            </div>
        </div> 

        <div class="form-group">
            <label for="fieldQuestion" class="col-sm-2 control-label">Question</label>
            <div class="col-sm-4">
                <input type="text" name="question" id="fieldQuestion" class="form-control">
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-4">
                <button type="submit" class="btn btn-default">Submit</button>
            </div>
        </div>

    </form>
</div>